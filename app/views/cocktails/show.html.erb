<h1><%= @cocktail.name %></h1>

<%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>

<% @cocktail.doses.each do |dose| %>
<h2> <%= dose.description %> </h2>
<h2> <%= dose.ingredient.name %> </h2>
<p><%= link_to "Delete a dose for this cocktail", dose_path(dose), method: 'delete' %></p>
<% end %>

<p><%= link_to "Add a dose for this cocktail", new_cocktail_dose_path(@cocktail) %></p>
<p><%= link_to "Back to the cocktails list", cocktails_path %></p>
